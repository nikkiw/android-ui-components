<?xml version="1.0" encoding="utf-8"?>
<com.ndev.android.ui.shimmer.ShimmerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/stub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_shimmer_circle" />

            <View
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_shimmer_rect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/stub1"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_shimmer_circle" />

            <View
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_shimmer_rect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/stub2"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_shimmer_circle" />

            <View
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_shimmer_rect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stub4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/stub3"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_shimmer_circle" />

            <View
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_shimmer_rect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stub5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/stub2"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_shimmer_circle" />

            <View
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_shimmer_rect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stub6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/stub3"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_shimmer_rect" />
        </LinearLayout>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="stub1,stub2,stub3,stub4,stub5,stub6"
            app:flow_horizontalAlign="center"
            app:flow_horizontalGap="10dp"
            app:flow_maxElementsWrap="3"
            app:flow_verticalAlign="center"
            app:flow_verticalGap="10dp"
            app:flow_wrapMode="aligned"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.ndev.android.ui.shimmer.ShimmerView>